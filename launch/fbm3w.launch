<launch>

	<group ns="fbm3w">
		
		<rosparam file="$(find rockin_scoring)/config/fbm3w.yaml" command="load" />
		
		<node name="bmbox"
			pkg="rockin_scoring"
			type="fbm3w"
			output="screen"
			launch-prefix="gnome-terminal -e"
		/>
		
		<node name="world_map"
			pkg="tf"
			type="static_transform_publisher"
			args="0 0 0 0 0 0 world map 100"
		/>
		
		<node name="map_server"
			pkg="map_server"
			type="map_server"
			args="$(find rockin_mocap)/config/lisbon_work_testbed_map.yaml"
		/>
		
		<node name="mocap"
			pkg="mocap_optitrack" 
			type="mocap_node"  
			respawn="false"
			launch-prefix=""
			required="true">
			<rosparam file="$(find rockin_mocap)/config/all_work_mocap.yaml" command="load" />
		</node>
		
		<node pkg="rosbag"
			type="record"
			name="log_fbm3w"
			args="record -o /home/rockin/logs/log_fbm3w
				--split --duration=1h
				/fbm3w/bmbox_state
				/fbm3w/client_state
				/fbm3w/refbox_state
				/fbm3w/map
				/fbm3w/map_metadata
				/fbm3w/robot_at_work/pose
				/fbm3w/robot_at_work/pose2d
				/fbm3w/robot_path_in_frame
				/fbm3w/target_path_in_frame
				/fbm3w/info
				/tf
				/rosout"
		/>
		
	</group>    
</launch>
