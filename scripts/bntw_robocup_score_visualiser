#!/usr/bin/env python

import time
import yaml
import os

# ROS imports
import rospy
from std_msgs.msg import String

score_msg = ""

def score_msgs_callback(data):
	global score_msg
	if data.data != score_msg:
		score_msg = data.data
		
		os.system('clear')
		print score_msg

def main():
	rospy.init_node("score_visualiser")
	rospy.loginfo("Score visualiser node started")

	timeout_msgs_subscriber = rospy.Subscriber('/bntw_robocup/visualisation/current_score', String, score_msgs_callback)
	
	rospy.spin()
	

if __name__ == '__main__':
	try:
		main()
	except rospy.ROSInterruptException:
	#	time.sleep(10)
		pass
